@using IdentityNLayer.BLL.DTO
@model IdentityNLayer.BLL.DTO.StudentDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    @foreach (var st in (Array)ViewData["StudentTypes"])
                    {
                        if (st.Equals((object)Model.Type))
                        {
                            <option value="@st" selected>@st</option>
                        }
                        else
                        {
                            <option value="@st">@st</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GroupId" class="control-label"></label>
                <select asp-for="GroupId" class="form-control">
                    @foreach (var gr in (List<GroupDTO>)ViewData["Groups"])
                    {
                        if (gr.Id == Model.GroupId)
                        {
                            <option value="@gr.Id" selected>@gr.Number</option>
                        }
                        else
                        {
                            <option value="@gr.Id">@gr.Number</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
