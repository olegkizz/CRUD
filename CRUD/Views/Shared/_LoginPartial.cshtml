@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IdentityNLayer.BLL.Interfaces.IStudentService studentService
@inject IdentityNLayer.BLL.Interfaces.ITeacherService teacherService
<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Student"))
        {
            Dictionary<string, string> studentId = new Dictionary<string, string> { { "id",
                    studentService.GetByUserId(UserManager.GetUserId(User)).Id.ToString()} };

            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Students" asp-action="Edit" asp-all-route-data="studentId"
                   title="Manage">Student Account</a>
            </li>
        }
        if (User.IsInRole("Teacher"))
        {
            Dictionary<string, string> teacherId = new Dictionary<string, string> { { "id",
                    teacherService.GetByUserId(UserManager.GetUserId(User)).Id.ToString()} };

            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Teachers" asp-action="Edit" asp-all-route-data="teacherId"
                   title="Manage">Teacher Account</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
