@using Microsoft.AspNetCore.Identity
@using IdentityNLayer.Core.Entities
@inject SignInManager<Person> SignInManager
@inject UserManager<Person> UserManager
@inject IdentityNLayer.BLL.Interfaces.IStudentService studentService
@inject IdentityNLayer.BLL.Interfaces.ITeacherService teacherService
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (await UserManager.GetUserAsync(User) != null)
        {
            if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Student"))
            {
                @*Dictionary<string, string> studentId = new Dictionary<string, string> { { "id",
                    studentService.GetByUserId(UserManager.GetUserId(User))?.Id.ToString()} };*@

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Students" asp-action="Edit" 
                       title="Manage">Student Account</a>
                </li>
            }
            if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Teacher"))
            {
               @* Dictionary<string, string> teacherId = new Dictionary<string, string> { { "id",
                                    teacherService.GetByUserId(UserManager.GetUserId(User))?.Id.ToString()} };*@

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Teachers" asp-action="Edit" 
                       title="Manage">Teacher Account</a>
                </li>
            }
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
