                        <input type="hidden" asp-for="@Model.StudentRequests.ToList()[i].UserName" />
                        @Html.CheckBoxFor(m => m.StudentRequests.ToList()[i].Applied)
                        @Html.DisplayFor(m => m.StudentRequests.ToList()[i].UserName)
                    }
            </div>
            <div class="form-group">
                <input type="submit" value="Create Groups" class="btn btn-primary" />
            </div>*@
        </form>
    </div>
</div>

