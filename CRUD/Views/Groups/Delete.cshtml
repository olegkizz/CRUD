@model IdentityNLayer.Models.GroupModel
@using IdentityNLayer.Core.Entities

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Teacher Link To Profile
        </dt>
        <dd class="col-sm-10">
            @Html.RouteLink(Model.Teacher?.User.FirstName + " " + Model.Teacher?.User.LastName, Model.Teacher?.LinkToProfile)
        </dd>
    </dl>

    @if (Model.Status == GroupStatus.Started)
    {
        <span style="color:crimson">To Delete Group Cancel Or Finish Group.</span>
    }
    else
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }

</div>
